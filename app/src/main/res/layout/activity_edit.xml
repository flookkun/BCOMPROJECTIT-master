<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.supawit.bcomprojectit.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:src="@drawable/bb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textStyle="bold">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="PASSWORD"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/edtxtpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="FULLNAME"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/edtxtfullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="35dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="TEL"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/edtxttel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:layout_marginLeft="85dp"
                android:inputType="numberDecimal"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="E-MAIL"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/edtxtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="รหัสพนักงาน"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/edtxtstcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:maxLength="4"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textStyle="bold"
            android:weightSum="2">

            <Button
                android:backgroundTint="#FDB5C8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="กลับหน้าหลัก"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/btnbtm"/>

            <Button
                android:backgroundTint="#FDB5C8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="บันทึก"
                android:textSize="20dp"
                android:id="@+id/btnstm"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
